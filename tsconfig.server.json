{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist/server",
    "rootDir": "src/server",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/server/**/*.ts"],
  "exclude": ["node_modules"]
}
